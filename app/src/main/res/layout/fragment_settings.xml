<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환경설정"
        android:textSize="40dp"
        tools:ignore="MissingConstraints"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/browser_actions_bg_grey"/>

    <TextView
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정 관리"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/btn_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="총 대사량"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/showFoodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK"
        app:layout_constraintTop_toBottomOf="@+id/btn_total"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/showTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="테스트 창입니다."
        app:layout_constraintTop_toBottomOf="@+id/showFoodBtn"
        tools:ignore="MissingConstraints" />

<!--    <ListView-->
<!--        android:id="@android:id/list"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/showTextView"-->
<!--        tools:ignore="MissingConstraints" />-->

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:gravity="center"/>





</androidx.constraintlayout.widget.ConstraintLayout>